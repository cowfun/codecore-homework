<%= form_for @post do |form| %>

  <% if @post.errors.present? %>
    <p>
      <%= @post.errors.full_messages.join(', ') %>
    </p>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: '5' %>
  </div>

  <%= form.submit %>
<% end %>
