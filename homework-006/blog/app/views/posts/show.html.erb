<div class = "container-fluid mt-3">

  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= @post.title %></h4>

      <% if @isLast %>
        <%= image_tag '1.jpg', class: "card-img" %>
      <% else %>
        <%= image_tag '2.jpg', class: "card-img" %>
      <% end %>

      <p class="card-text mt-2"><%= @post.body %></p>

      <p class="card-text mt-2"><strong><%= @post.user&.full_name %></strong></p>

      <% if user_signed_in? && can?(:manage, @post)%>
        <div class = "text-right">
          <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-outline-primary" %>

          <%= link_to(
              'Delete',
              post_path(@post),
              data: {confirm: 'Are you sure?'},
              method: :delete,
              class:"btn btn-outline-primary") %>
        </div>
      <% end %>

    </div>
  </div>

</div>

<div class = "container-fluid mt-3">

  <hr>

  <%= form_for [@post, @comment] do |f| %>

    <h4> Leave A Comment </h4>
    <div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: '5' %>
      </div>
    </div>
    <div class = 'text-right'>
      <%= f.submit 'Create Comment', class:"btn btn-outline-primary" %>
    </div>
  <% end %>

  <hr>

  <% @comments.each do |comment| %>
    <div class="card mt-3">
      <div class="card-body">
        <h4 class="card-title"><%= comment.user&.full_name %></h4>
        <p class="card-text"><%= comment.description %> </p>
        <% if can?(:destroy, comment) %>
        <div class = "text-right">
            <%= link_to(
                'Delete',
                comment_path(comment),
                data: {confirm: 'Are you sure?'},
                method: :delete,
                class:"btn btn-outline-primary") %>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
