<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Create Post', new_post_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Contact', root_path, class: 'nav-link' %>
        </li>
      </ul>

      <ul class="navbar-nav ml-auto">
        <form class="form-inline">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
        </form>

        <li class="nav-item">
          <%= link_to 'Sign Up', root_path, class: 'nav-link' %>
        </li>
        <li class="navbar-item">
          <%= link_to 'Login', root_path, class: 'nav-link' %>
        </li>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
