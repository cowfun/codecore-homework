<%- include('../partials/header') %>
<div class = "row justify-content-center">
<div class = "col-sm-8 mt-2">
  <form class = "d-flex flex-column" enctype="multipart/form-data" action = '/cohorts' method = 'POST'>

    <div class = "form-group">

      <label> Logo </label>
      <input
        class="form-control"
        name="photo"
        type="file"
      />

      <label class = "mt-2"> Name </label>
      <textarea
         class = 'form-control'
         rows = '1'
         name = 'title'
         placeholder = "ie. Pokemans"></textarea>

      <label class = "mt-2"> Members </label>
      <textarea
         class = 'form-control'
         rows = '5'
         name = 'members'
         placeholder = "ie. Ashe, Pikachu, Bulbasaur"></textarea>
    </div>
    <input class = "btn btn-outline-primary align-self-end"
           type = 'submit'
           value = 'Submit'/>
  </form>
</div>
</div>

<%- include('../partials/footer') %>
