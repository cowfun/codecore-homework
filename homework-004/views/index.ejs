<%- include('./partials/header') %>

<div class = "container-fluid justify-content-center">
  <div class="card mt-3">
    <div class="card-body">

      <div class = "d-flex justify-content-center">
        <h4 class="card-title">Welcome to Team Splitter</h4>
      </div>

      <div class = "d-flex justify-content-center">
        <p class="card-text mt-2"> Whether you want to split into n amount of teams or n amount of people per team, we can do it! </p>
      </div>

      <div class = "d-flex justify-content-center">
        <p> Teams currently using Team Splitter </p>
      </div>

      <div class = "d-flex justify-content-center">
        <% for (let team of teams) { %>
          <a href = "/cohorts/<%=team.id%>" >
            <img src="<%= team.photo_path %>" class="rounded-circle mr-2" width="50" height="50">
          </a>
        <% } %>
      </div>

    </div>
  </div>
</div>

<%- include('./partials/footer') %>
